# KetoOS Environment Variables - Production Template
# This file serves as a template for production environment variables
# Copy these variables to your Vercel project settings

# Application Configuration
VITE_APP_NAME=KetoOS
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_SOUND_EFFECTS=true
VITE_ENABLE_BOOT_ANIMATION=true
VITE_ENABLE_CONTEXT_MENUS=true
VITE_ENABLE_DOCK_EFFECTS=true

# UI Configuration
VITE_DEFAULT_WALLPAPER=default
VITE_DOCK_POSITION=bottom
VITE_MENU_BAR_VISIBLE=true

# Performance Settings
VITE_ANIMATION_DURATION=300
VITE_WINDOW_ANIMATION_SPEED=fast

# Production Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_ENABLE_HOT_RELOAD=false

# API Configuration (if needed in the future)
VITE_API_BASE_URL=https://your-api-domain.com/api
VITE_API_TIMEOUT=5000

# Third-party Services (if needed in the future)
VITE_ANALYTICS_ID=your-analytics-id
VITE_ERROR_TRACKING_ENABLED=true
